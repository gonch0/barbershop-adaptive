{
  "name": "barber",
  "version": "15.0.0",
  "private": true,
  "description": "Личный проект «Barber» от HTML Academy",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "1.x",
    "autoprefixer": "9.1.x",
    "browser-sync": "^2.26.3",
    "gulp": "4.0.x",
    "gulp-less": "4.0.x",
    "gulp-plumber": "1.2.x",
    "gulp-postcss": "8.0.x",
    "stylelint": "^9.10.1",
    "stylelint-config-htmlacademy": "0.1.x"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/less/**/*.less\" --syntax less",
    "test": "npm run editorconfig && npm run stylelint",
    "build": "gulp css",
    "start": "gulp start"
  },
  "browserslist": [
    "last 2 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/less/**/*.less"
  ],
  "engines": {
    "node": "8.12"
  },
  "dependencies": {
    "deep-extend": "^0.6.0",
    "gulp-sass": "^4.0.2",
    "gulp-scss": "^1.4.0",
    "merge": "^1.2.1",
    "pixel-glass": "^1.0.13",
    "scss": "^0.2.4"
  }
}
